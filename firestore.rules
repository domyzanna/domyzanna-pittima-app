/**
 * This ruleset enforces a strict user-ownership model where all data
 * is stored within subcollections under a specific user's document.
 * This ensures that a user can only ever access their own data, providing
 * strong privacy and security by default.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Helper function to check if a user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Helper function to verify that the requester's UID matches the
     * userId in the document path. This is the core of our security model.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Manages user profile documents.
     * Users can create their own profile, and read/update/delete it.
     * Listing all users is disallowed to prevent user enumeration.
     */
    match /users/{userId} {
      allow read, update, delete: if isOwner(userId);
      // A user can create their own document, ensuring the doc ID matches their UID.
      allow create: if isOwner(userId) && request.resource.id == userId;
      allow list: if false;
    }

    /**
     * Manages a user's private deadlines.
     * All operations are restricted to the owner of the data.
     */
    match /users/{userId}/deadlines/{deadlineId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }

    /**
     * Manages a user's private categories.
     * All operations are restricted to the owner of the data.
     */
    match /users/{userId}/categories/{categoryId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    // Stripe extension rules
    // Allow user to read their own subscription status and checkout sessions
     match /customers/{uid}/{any=**} {
       allow read: if request.auth.uid == uid;
    }
  }
}
